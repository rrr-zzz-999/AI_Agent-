# 智能合约分析工具环境变量配置示例
# 复制此文件为 .env 并填入您的真实API密钥

# Web3 Provider URL - 支持 Alchemy, Infura, QuickNode 等
WEB3_PROVIDER_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_API_KEY
# 或者使用 Infura
# WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Etherscan API 密钥 - 用于获取合约源代码和验证信息
ETHERSCAN_API_KEY=HTI474WACDZSHEP62G978FEWM9ZWAD1GAF

# 可选配置
# 最大并发工作线程数
MAX_WORKERS=10

# 批量分析时的延迟 (秒)
REQUEST_DELAY=0.2

# 默认分析的区块号 (latest 表示最新区块)
DEFAULT_BLOCK=latest

# 是否保留重要注释 (true/false)
KEEP_ESSENTIAL_COMMENTS=true

# 输出目录
OUTPUT_DIR=./analysis_results

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
